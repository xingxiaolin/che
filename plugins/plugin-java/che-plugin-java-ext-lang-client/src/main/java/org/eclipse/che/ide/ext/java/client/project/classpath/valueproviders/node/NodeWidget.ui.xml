<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style src="org/eclipse/che/ide/api/ui/style.css">
        .main {
            min-width: 260px;
            height: 20px;
            padding: 1px;
            display: inline-block;
        }

        .main:hover {
            background: hoverBackgroundColor;
        }

        .icon {
            float: left;
            width: 20px;
            height: 100%;
            margin-top: auto;
            line-height: 24px;
        }

        .icon > svg {
            margin-top: -2px;
            width: 16px;
            height: 16px;
            padding: 3px 0;
        }

        .label {
            cursor: default;
            width: 220px;
            margin-top: 2px;
            display: inline;
            float: left;
            color: mainFontColor;
            overflow: hidden;
            white-space: nowrap;
            text-overflow: ellipsis;
        }

        .removeButton {
            cursor: pointer;
            float: right;
            width: 20px;
            height: 100%;
            margin-top: auto;
        }

        .removeButton > svg {
            width: 15px;
            height: 15px;
            padding: 3px 0;
            fill: primaryButtonBackground;
        }
    </ui:style>

    <g:FlowPanel ui:field="main" addStyleNames="{style.main}">

        <g:SimplePanel ui:field="icon" addStyleNames="{style.icon}"/>
        <g:Label ui:field="name" addStyleNames="{style.label}"/>
        <g:SimplePanel ui:field="removeButton" addStyleNames="{style.removeButton}"/>

    </g:FlowPanel>

</ui:UiBinder>
